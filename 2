public class HumanReadableTime {
  public static String makeReadable(int seconds) {
    String s =  Integer. toString(seconds % 60);
    String m = Integer. toString((seconds / 60) % 60);
    String h = Integer. toString(seconds / 3600);
    if(s.length() == 1){s = "0"+s;}
    if(m.length() == 1){m = "0"+m;}
    if(h.length() == 1){h = "0"+h;}
    return h+":"+m+":"+s;
  }
}
